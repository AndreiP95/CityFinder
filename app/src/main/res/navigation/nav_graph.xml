<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.citiessearch.ui.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_show_city_on_map"
            app:destination="@+id/cityMapFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/cityMapFragment"
        android:name="com.example.citiessearch.ui.citymap.CityMapFragment"
        android:label="CityMapFragment" />
</navigation>